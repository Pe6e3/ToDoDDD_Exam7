@using ToDoDDD.DAL.Entities;
@model IEnumerable<Taska>

    <a asp-action="Create">Создать</a>
    <h2> Задачи</h2>

<table style="border-collapse: collapse; border: 1px solid black; border-radius: 10px;">
    <tr style="border: 1px solid black;">
        <th style="padding: 10px; border: 1px solid black;">GUID</th>
        <th style="padding: 10px; border: 1px solid black;">Название</th>
        <th style="padding: 10px; border: 1px solid black;">Описание</th>
        <th style="padding: 10px; border: 1px solid black;">Статус</th>
        <th style="padding: 10px; border: 1px solid black;">Приоритет</th>
        <th style="padding: 10px; border: 1px solid black;">Дата создания</th>
        <th> Подробно </th>
    </tr>
    @foreach (Taska task in Model)
    {
        <tr style="border: 1px solid black;">
            <td style="padding: 10px; border: 1px solid black;">@task.Id</td>
            <td style="padding: 10px; border: 1px solid black;">@task.TaskName </td>
            <td style="padding: 10px; border: 1px solid black;">@task.Desc </td>
            <td style="padding: 10px; border: 1px solid black;">@task.Status.StatusName </td>
            <td style="padding: 10px; border: 1px solid black;">@task.Prioritet.PrioritetName </td>
            <td style="padding: 10px; border: 1px solid black;">@task.CreateDate </td>
            <td><a asp-action="Details" asp-route-id="@task.Id"> Подробно</a> </td>
        </tr>
    }
</table>
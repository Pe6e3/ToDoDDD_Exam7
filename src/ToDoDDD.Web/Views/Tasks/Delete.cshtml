@model ToDoDDD.DAL.Entities.Taska


@{
    ViewData["Title"] = "Удалить";
}

<h1>Удалить</h1>

<h3>Уверен?</h3>
<div>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TaskName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TaskName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Desc)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Desc)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status.StatusName)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Prioritet)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Prioritet.PrioritetName)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreateDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreateDate)
        </dd>

    </dl>

    <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Вернутьс к списку задач</a>
    </form>
</div>
